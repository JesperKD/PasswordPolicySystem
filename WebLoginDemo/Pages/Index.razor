@page "/"

<h3 class="display-4">Password Policy System</h3>
<hr class="mb-4" />

<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <EditForm Model="@LoginModel" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="LoginModel.Username" class="form-control" />
                <ValidationMessage For="@(() => LoginModel.Username)" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="LoginModel.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => LoginModel.Password)" />
            </div>
            <button disabled="@isProcessingSubmit" class="btn btn-primary">
                @if (isProcessingSubmit)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Login
            </button>
            <NavLink href="/register" class="btn btn-link">Register</NavLink>
        </EditForm>
        <label disabled="@_errorMessage != null" style="color: red">@_errorMessage</label>
    </div>
</div>